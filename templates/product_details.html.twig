{% extends 'layout.html.twig' %}

{% block content %}

	<div class="breadcrumbs">
		<a href="/">Homepage</a>
		&raquo;
		<a href="/products">Bikes</a>
	</div>

	<div class="product-details">
		<div>
			{% if bike.image %}
				<img src="/images/{{ bike.image }}"/>
			{% endif %}
		</div>
		<h1>{{ bike.name }}</h1>
		<p>Â£{{ bike.price }}</p>

		<form method='post'>
			{% if inBasket %}
				<button disabled>Added to basket</button>
			{% else %}
				<button>Add to basket</button>
			{% endif %}
		</form>
	</div>

	{% if bike.description %}
		<p>{{ bike.description }}</p>
	{% endif %}

</div>{% endblock %}
